@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>
<NotificationsCount Count=currentCount />

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me +</button><button class="btn btn-primary" @onclick="DecreaseCount">Click me -</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

        private void DecreaseCount()
    {
        currentCount--;
    }
}
